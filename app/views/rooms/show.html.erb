<div class="chat-status">
<div class="chat">
<h1>Chat</h1>
<div id="messages">
  <%= render @messages %>
</div>
<div class="form">
  <%= render 'messages/message_form' %>
</div>
</div>
<div class="status">
  <h1>Online</h1>
  <ul id="users-list">
    <% @users.each do |member| %>
      <li>
        <%= member.name %>
        <% if member.online %>
          <%= image_tag "green_dot.png", id: "#{member.id}-status", class: "active" %>
        <% else %>
          <%= image_tag "green_dot.png", id: "#{member.id}-status", class: "inactive" %>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
</div>
